<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Anime Character Finder</title>
  <style>
    body { font-family: Arial, sans-serif; text-align: center; background-color: #f0f8ff; padding: 20px; }
    input, button { padding: 10px; margin: 10px; font-size: 16px; }
    img { max-width: 200px; margin-top: 20px; border-radius: 10px; }
    .card { background: #fff; padding: 20px; border-radius: 10px; box-shadow: 0 0 10px #ccc; display: inline-block; margin-top: 20px; }
  </style>
</head>
<body>

  <h1>üîç Anime Character Finder</h1>
  <p>Enter an anime character name to see their image and description.</p>

  <input type="text" id="characterName" placeholder="e.g. Naruto Uzumaki">
  <button onclick="searchCharacter()">Search</button>

  <div id="result"></div>

  <script>
    async function searchCharacter() {
      const name = document.getElementById('characterName').value;
      const resultDiv = document.getElementById('result');
      resultDiv.innerHTML = "Searching...";

      try {
        const response = await fetch(https://api.jikan.moe/v4/characters?q=${encodeURIComponent(name)}&limit=1);
        const data = await response.json();

        if (data.data && data.data.length > 0) {
          const character = data.data[0];
          resultDiv.innerHTML = `
            <div class="card">
              <h2>${character.name}</h2>
              <img src="${character.images.jpg.image_url}" alt="${character.name}">
              <p>${character.about ? character.about.split('. ').slice(0, 2).join('. ') + '.' : 'No description available.'}</p>
            </div>
          `;
        } else {
          resultDiv.innerHTML = "Character not found. Try another name.";
        }
      } catch (error) {
        resultDiv.innerHTML = "Error fetching character data.";
        console.error(error);
      }
    }
  </script>

</body>
</html>

